// See https://aka.ms/new-console-template for more information
Console.WriteLine("b2 Variable");

// Declare some variables
int age = 25;
string name = "Alice";
double height = 1.68;
bool isStudent = true;

// Print a table header
Console.WriteLine("{0,-10} | {1,-10} | {2,-10}", "Name", "Type", "Value");
Console.WriteLine(new string('-', 36));

// Print variable info
Console.WriteLine("{0,-10} | {1,-10} | {2,-10}", "age", "int", age);
Console.WriteLine("{0,-10} | {1,-10} | {2,-10}", "name", "string", name);
Console.WriteLine("{0,-10} | {1,-10} | {2,-10}", "height", "double", height);
Console.WriteLine("{0,-10} | {1,-10} | {2,-10}", "isStudent", "bool", isStudent);



